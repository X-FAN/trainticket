<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_normal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:cardBackgroundColor="@android:color/white"
        card:cardElevation="@dimen/cardview_default_elevation"
        card:cardMaxElevation="@dimen/cardview_default_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/depart_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="@dimen/spacing_tiny"
                android:text="出发日期"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/depart_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/depart_date"
                android:padding="@dimen/spacing_tiny"
                android:text="南京南"
                android:textSize="@dimen/font_large" />

            <TextView
                android:id="@+id/depart_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/depart_station"
                android:padding="@dimen/spacing_tiny"
                android:text="8:30"
                android:textColor="@color/light_gray" />

            <TextView
                android:id="@+id/arrive_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/depart_date"
                android:padding="@dimen/spacing_tiny"
                android:text="合肥南"
                android:textSize="@dimen/font_large" />

            <TextView
                android:id="@+id/arrive_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/depart_station"
                android:padding="@dimen/spacing_tiny"
                android:text="9:30"
                android:textColor="@color/light_gray" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>